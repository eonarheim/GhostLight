{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "Actor": {
            "properties": {
                "id": {
                    "type": "string"
                },
                "shape": {
                    "$ref": "#/definitions/Shape"
                },
                "sprite": {
                    "properties": {
                        "opacity": {
                            "default": 100,
                            "type": "number"
                        },
                        "texture": {
                            "default": "",
                            "type": "string"
                        }
                    },
                    "type": "object"
                }
            },
            "type": "object"
        },
        "Config": {
            "properties": {
                "background": {
                    "default": "#000000",
                    "type": "string"
                },
                "height": {
                    "default": 256,
                    "type": "number"
                },
                "width": {
                    "default": 256,
                    "type": "number"
                }
            },
            "type": "object"
        },
        "Shape": {
            "properties": {
                "height": {
                    "type": "number"
                },
                "width": {
                    "type": "number"
                },
                "x": {
                    "type": "number"
                },
                "y": {
                    "type": "number"
                }
            },
            "type": "object"
        }
    },
    "properties": {
        "actors": {
            "items": {
                "$ref": "#/definitions/Actor"
            },
            "type": "array"
        },
        "config": {
            "$ref": "#/definitions/Config"
        }
    },
    "type": "object"
}

